{
"compilerOptions": {
  "target": "ES2020",
  "module": "ESNext",
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "jsx": "react-jsx",
  "strict": true,
  "moduleResolution": "node",
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "skipLibCheck": true
},
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}